<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FullImage"
    android:background="#121212">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="0dp"
        android:padding="0dp">

        <Button
            android:id="@+id/fullimage_b_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_b_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/hubbubssi"
            android:textSize="25sp"
            android:text="Full cover"
            android:textColor="#F0FFFFFF" />

    </androidx.appcompat.widget.Toolbar>
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/fullImageBook_photoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"/>
</LinearLayout>