<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#121212"
        android:orientation="vertical"
        tools:context=".FullBookDescription">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/fullbook_b_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_b_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/hubbubssi"
                android:textSize="25sp"
                android:text="Book"
                android:textColor="#F0FFFFFF" />

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/fullbook_image"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/fullbook_tv_namebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Name: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fullbook_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Author: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fullbook_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Year: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fullbook_tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Publisher: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fullbook_tv_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Pages: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fullbook_tv_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Format: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/fullbook_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/partnercondensed"
            android:text="Description: "
            android:textColor="#F0FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fullbook_b_download"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_download"
                android:text="Download book"
                android:textAllCaps="false"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fullbook_tv_filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Filesize: "
                android:textColor="#F0FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>